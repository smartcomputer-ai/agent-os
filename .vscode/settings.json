{
  // Enable every feature flag across the workspace; the old `features: ["all"]`
  // setting passed a nonexistent feature to every crate and broke cargo checks.
  "rust-analyzer.cargo.allFeatures": true,
  // Explicitly clear any user-level `cargo.features` override (e.g. ["all"])
  // so rust-analyzer doesn't keep passing `--features all`.
  "rust-analyzer.cargo.features": [],
  // Use the rustup-provided rust-analyzer (stable toolchain) to avoid bundled-server regressions.
  //"rust-analyzer.server.path": "/Users/lukas/.rustup/toolchains/stable-aarch64-apple-darwin/bin/rust-analyzer"
}
