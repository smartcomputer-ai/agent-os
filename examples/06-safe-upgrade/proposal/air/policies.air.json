[
  {
    "$kind": "defpolicy",
    "name": "demo/http-policy@2",
    "rules": [
      {
        "when": {
          "effect_kind": "http.request",
          "origin_kind": "plan",
          "origin_name": "demo/fetch_plan@2"
        },
        "decision": "allow"
      },
      {
        "when": {
          "effect_kind": "http.request",
          "origin_kind": "plan",
          "origin_name": "demo/fetch_plan@1"
        },
        "decision": "allow"
      },
      { "when": {}, "decision": "deny" }
    ]
  }
]
